# Hugging Face API Token
# Get your token at: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Django settings
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Memory Management Settings
# Set MAX_RAM_GB to limit memory usage (in gigabytes). 0 = no limit
MAX_RAM_GB=0

# Automatically unload models after each generation (saves memory, slower)
AUTO_UNLOAD_MODELS=False

# Maximum number of models to keep loaded (1 = only current model)
MAX_LOADED_MODELS=1

# Clear GPU/CPU cache after each generation
CLEAR_CACHE_AFTER_GENERATION=True
